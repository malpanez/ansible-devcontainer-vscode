{
  "name": "Ansible Dev Container (docker-in-docker)",
  "build": {
    "dockerfile": "devcontainers/ansible/Dockerfile",
    "context": "../.."
  },
  "runArgs": [
    "--init",
    "--privileged"
  ],
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "redhat.ansible",
        "redhat.vscode-yaml",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "charliermarsh.ruff",
        "samuelcolvin.jinjahtml",
        "ms-azuretools.vscode-docker",
        "tamasfe.even-better-toml",
        "eamodio.gitlens"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "ansible.python.interpreterPath": "/usr/local/bin/python",
        "ansible.ansible.path": "/usr/local/bin/ansible",
        "ansible.ansible.useFullyQualifiedCollectionNames": true,
        "ansible.validation.enabled": true,
        "ansible.validation.lint.enabled": true,
        "ansible.validation.lint.path": "/usr/local/bin/ansible-lint",
        "files.associations": {
          "*.yml": "ansible",
          "*.yaml": "ansible"
        },
        "[yaml]": {
          "editor.defaultFormatter": "redhat.vscode-yaml",
          "editor.formatOnSave": true,
          "editor.tabSize": 2
        },
        "editor.rulers": [120],
        "files.trimTrailingWhitespace": true,
        "files.insertFinalNewline": true
      }
    }
  },
  "mounts": [
    "source=uv-cache,target=/home/vscode/.cache/uv,type=volume",
    "source=ansible-galaxy-cache,target=/home/vscode/.ansible,type=volume"
  ],
  "remoteEnv": {
    "ANSIBLE_CONFIG": "${containerWorkspaceFolder}/ansible.cfg",
    "ANSIBLE_FORCE_COLOR": "true",
    "UV_CACHE_DIR": "/home/vscode/.cache/uv",
    "ANSIBLE_GALAXY_CACHE_DIR": "/home/vscode/.ansible/galaxy_cache",
    "PRE_COMMIT_HOME": "/workspace/.cache/pre-commit",
    "ANSIBLE_LOCAL_TEMP": "/workspace/.cache/ansible/tmp"
  },
  "remoteUser": "vscode",
  "postCreateCommand": [
    "/bin/bash",
    "-lc",
    "mkdir -p /workspace/.cache/pre-commit /workspace/.cache/ansible/tmp && ensure-precommit && (test -f requirements.yml && ansible-galaxy collection install -r requirements.yml || echo 'No requirements.yml found, skipping collection install')"
  ],
  "workspaceFolder": "/workspace",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind"
}
