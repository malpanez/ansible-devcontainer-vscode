# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.py]
indent_size = 4
max_line_length = 120

[*.{yml,yaml}]
indent_size = 2

[*.{tf,tfvars}]
indent_size = 2

[*.{hcl}]
indent_size = 2

[*.go]
indent_style = tab
indent_size = 4

[*.md]
trim_trailing_whitespace = false
max_line_length = off

[*.sh]
indent_size = 2

[Makefile]
indent_style = tab

[{package.json,*.json}]
indent_size = 2

[Dockerfile*]
indent_size = 2

[*.toml]
indent_size = 2
